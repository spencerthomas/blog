
<div class="row justify-content-center">
    <% @articles.reverse.each do |article| %>
    <div class="col-8">
      <br>
      <h2><%= article.title %></h2>
      <p class="time_ago">Posted <%= time_ago_in_words(article.created_at) %> ago</p>
      <p><%= article.content %></p>
      <% if user_signed_in? %>
      <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-secondary btn-sm"><%= link_to 'Show', article %></button>
        <button type="button" class="btn btn-secondary btn-sm"><%= link_to 'Edit', edit_article_path(article) %></button>
        <button type="button" class="btn btn-secondary btn-sm"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        <% else %>
        <% end %>
      </div>
    </div>
    <% end %>
</div>  
  

<div><%= link_to 'New Article', new_article_path, class: "btn btn-primary btn-sm" %></div>

